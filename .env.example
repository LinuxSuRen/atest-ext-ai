# Environment variables for atest-ext-ai plugin deployment
# Copy this file to .env and customize for your environment

# =================
# AI CONFIGURATION
# =================
# All AI-related variables use ATEST_EXT_AI_ prefix for consistency

# AI Provider: local (Ollama), openai, claude
ATEST_EXT_AI_AI_PROVIDER=local

# Ollama Configuration (for local provider)
ATEST_EXT_AI_OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_PORT=11434

# AI Model (auto-detected if not set for local provider)
ATEST_EXT_AI_AI_MODEL=

# API Keys for cloud providers (leave empty for local)
ATEST_EXT_AI_OPENAI_API_KEY=
ATEST_EXT_AI_CLAUDE_API_KEY=

# =================
# PLUGIN SETTINGS
# =================

# Unix socket path for plugin communication
ATEST_EXT_AI_SERVER_SOCKET_PATH=/tmp/atest-ext-ai.sock

# Plugin configuration file path
ATEST_EXT_AI_CONFIG_PATH=/etc/atest-ai/config.yaml

# Logging level: debug, info, warn, error
ATEST_EXT_AI_LOG_LEVEL=info

# =================
# SERVICE PORTS
# =================

# Main API Testing Tool HTTP port
ATEST_HTTP_PORT=8080

# PostgreSQL port
POSTGRES_PORT=55432

# MySQL port (for development)
MYSQL_PORT=3306

# Redis port
REDIS_PORT=6379

# Prometheus port (monitoring)
PROMETHEUS_PORT=9090

# Grafana port (monitoring)
GRAFANA_PORT=3000

# =================
# DATABASE CONFIG
# =================

# PostgreSQL configuration
POSTGRES_DB=testdb
POSTGRES_USER=testuser
POSTGRES_PASSWORD=testpass

# MySQL configuration
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_DATABASE=testdb
MYSQL_USER=testuser
MYSQL_PASSWORD=testpass

# Redis configuration
REDIS_PASSWORD=redispass

# =================
# MONITORING
# =================

# Grafana admin password
GRAFANA_PASSWORD=admin

# Enable/disable monitoring services
ENABLE_MONITORING=false

# =================
# SECURITY
# =================

# JWT secret for authentication (if applicable)
JWT_SECRET=your-jwt-secret-here

# SSL/TLS certificates path
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private

# =================
# PERFORMANCE
# =================

# Maximum concurrent AI requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30

# AI response cache TTL in minutes
CACHE_TTL=60

# =================
# DEVELOPMENT
# =================

# Development mode flag
DEV_MODE=false

# Hot reload enabled
HOT_RELOAD=false

# Debug profiling port
DEBUG_PORT=9090