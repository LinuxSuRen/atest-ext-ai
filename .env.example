# Environment variables for atest-ext-ai plugin deployment
# Copy this file to .env and customize for your environment

# =================
# AI CONFIGURATION
# =================
# AI Provider: local (Ollama), openai, claude
AI_PROVIDER=local

# Ollama Configuration (for local provider)
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_PORT=11434

# AI Model (auto-detected if not set for local provider)
AI_MODEL=

# API Key for cloud providers (leave empty for local)
AI_API_KEY=

# =================
# PLUGIN SETTINGS
# =================

# Unix socket path for plugin communication
SERVER_SOCKET_PATH=/tmp/atest-ext-ai.sock

# Plugin configuration file path
CONFIG_PATH=/etc/atest-ai/config.yaml

# Logging level: debug, info, warn, error
LOG_LEVEL=info

# =================
# SERVICE PORTS
# =================

# Main API Testing Tool HTTP port
ATEST_HTTP_PORT=8080

# PostgreSQL port
POSTGRES_PORT=55432

# MySQL port (for development)
MYSQL_PORT=3306

# Redis port
REDIS_PORT=6379

# Prometheus port (monitoring)
PROMETHEUS_PORT=9090

# Grafana port (monitoring)
GRAFANA_PORT=3000

# =================
# DATABASE CONFIG
# =================

# PostgreSQL configuration
POSTGRES_DB=your_postgres_db
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_secure_postgres_password

# MySQL configuration
MYSQL_ROOT_PASSWORD=your_secure_mysql_root_password
MYSQL_DATABASE=your_mysql_db
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_secure_mysql_password

# Redis configuration
REDIS_PASSWORD=your_secure_redis_password

# =================
# MONITORING
# =================

# Grafana admin password
GRAFANA_PASSWORD=admin

# Enable/disable monitoring services
ENABLE_MONITORING=false

# =================
# SECURITY
# =================

# JWT secret for authentication (if applicable)
JWT_SECRET=your-jwt-secret-here

# SSL/TLS certificates path
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private

# =================
# PERFORMANCE
# =================

# Maximum concurrent AI requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30

# AI response cache TTL in minutes
CACHE_TTL=60

# =================
# DEVELOPMENT
# =================

# Development mode flag
DEV_MODE=false

# Hot reload enabled
HOT_RELOAD=false

# Debug profiling port
DEBUG_PORT=9090